
@{
    ViewBag.Title = "Login";
}

<h2 class="fw-semibold">Login</h2>
<hr />
<div class=" d-flex flex-column w-25 border border-1 border-dark rounded-1 px-2 py-2">
    <label>Email</label>
    <input type="email" id="txtEmail" />
    <label>Password</label>
    <input type="password" id="txtPassword" />
    <button id="signInBtn" class="btn btn-success w-25 mt-3" onclick="signIn()" >Login</button>
</div>

<script>

    const signIn = () => {
      
        const email = document.getElementById("txtEmail").value;
        const password = document.getElementById("txtPassword").value;

   
        console.log(email, password);
        const req = new Request("/home/signin", {
            method: "POST",
            headers: {
                "Content-Type": "application/json" // Specify the request body format
            },
            body: JSON.stringify({
                email: email,
                password: password
            })
        });

        fetch(req).then(res => res.json()).then((data) => {
            console.log(data);
            if (data === "OK")
                alert("Valid User");
            else
                alert("Invalid user");
        }).catch((err)=>console.log(err));
       
    }
  
    
        
    
    
   
</script>